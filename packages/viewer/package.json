{
  "name": "@rich-data/viewer",
  "private": true,
  "version": "3.0.0-preview.0",
  "author": "himself65 <himself65@outlook.com>",
  "license": "MPL-2.0",
  "keywords": [
    "react",
    "data-viewer"
  ],
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./vanilla": "./src/index.ts",
    "./react": "./src/index.tsx",
    "./blocks/*": "./src/blocks/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./components/*": "./src/components/*.tsx",
    "./middleware/*": "./src/middleware/*.ts",
    "./theme/*": "./src/theme/*",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "types": "dist/index.d.ts",
    "jsdelivr": "dist/browser.js",
    "browser": {
      "vanilla": "dist/browser.js"
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "./react": {
        "types": "./dist/react.d.ts",
        "import": "./dist/react.mjs",
        "require": "./dist/react.js"
      },
      "./vanilla": {
        "types": "./dist/vanilla.d.ts",
        "import": "./dist/vanilla.mjs",
        "require": "./dist/vanilla.js"
      },
      "./blocks/*": {
        "types": "./dist/blocks/*.d.ts",
        "import": "./dist/blocks/*.mjs",
        "require": "./dist/blocks/*.js"
      },
      "./hooks/*": {
        "types": "./dist/hooks/*.d.ts",
        "import": "./dist/hooks/*.mjs",
        "require": "./dist/hooks/*.js"
      },
      "./middleware/*": {
        "types": "./dist/middleware/*.d.ts",
        "import": "./dist/middleware/*.mjs",
        "require": "./dist/middleware/*.js"
      },
      "./components/*": {
        "types": "./dist/components/*.d.ts",
        "import": "./dist/components/*.mjs",
        "require": "./dist/components/*.js"
      },
      "./theme/*": "./src/theme/*"
    }
  },
  "scripts": {
    "build": "vite build"
  },
  "files": [
    "dist",
    "theme"
  ],
  "dependencies": {
    "clsx": "^1.2.1",
    "jotai": "^2.0.3"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0"
  }
}
