{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "outDir": "./dist/out/",
    "rootDir": "./src/",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "incremental": false,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
